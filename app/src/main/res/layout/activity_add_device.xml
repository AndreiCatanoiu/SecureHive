<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".activityes.AddDeviceActivity">

    <TextView
        android:id="@+id/textTitleAddDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adaugă dispozitiv nou"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textDeviceInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduceți ID-ul dispozitivului pentru a-l conecta cu aplicația"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textTitleAddDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editDeviceId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Dispozitiv"
        android:inputType="text"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/textDeviceInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nume Dispozitiv (opțional)"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/editDeviceId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonAddDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adaugă Dispozitiv"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/editDeviceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonAddDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>