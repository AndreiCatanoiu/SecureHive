<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- White, modern, Material theme -->
    <style name="Theme.SecureHive" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Backgrounds and text -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="materialCardViewStyle">@style/Widget.SecureHive.CardView</item>
        <item name="materialButtonStyle">@style/Widget.SecureHive.Button</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Theme without ActionBar -->
    <style name="Theme.SecureHive.NoActionBar" parent="Theme.SecureHive">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarStyle">@style/Widget.SecureHive.Toolbar</item>
    </style>

    <!-- Stil personalizat pentru butoane -->
    <style name="Widget.SecureHive.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Stil pentru butoane secundare -->
    <style name="Widget.SecureHive.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Stil pentru butoane outlined -->
    <style name="Widget.SecureHive.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Stil pentru butoane text -->
    <style name="Widget.SecureHive.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Stil pentru carduri -->
    <style name="Widget.SecureHive.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <!-- Stil pentru EditText -->
    <style name="Widget.SecureHive.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Stil pentru AlertDialog -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.SecureHive.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SecureHive.Button.Secondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialog.Body</item>
    </style>

    <style name="CustomAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Stil pentru Toolbar -->
    <style name="Widget.SecureHive.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/primary_dark</item>
        <item name="navigationIconTint">@color/primary_dark</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.Hint" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>